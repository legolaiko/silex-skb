{% if is_granted('ROLE_USER') %}
    {% set user = app.security.getToken().getUser() %}
    <div class="dropdown navbar-btn navbar-right">
        <button class="btn btn-primary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user glyphicon-left"></span>
            {{ user.nickname }}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="userDropdown">
            <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('user_profile') }}">{{ 'Profile'|trans }}</a></li>
            <li role="presentation" class="divider"></li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('user_logout') }}">{{ 'Sign out'|trans }}</a></li>
        </ul>
    </div>
{% else %}
    <a href="{{ url('user_login') }}" class="btn btn-primary navbar-btn navbar-right">
        <span class="glyphicon glyphicon-log-in glyphicon-left"></span>
        {{ 'Sign in'|trans }}
    </a>
{% endif %}
